version: '3'

services:
  db:
    image: "mysql:5.7"
    ports:
    - "3306:3306"
    restart: unless-stopped
    container_name: myfuns_db
    volumes:
    - db_data:/var/lib/mysql
    environment:
      MYSQL_ROOT_PASSWORD: password
      MYSQL_USER: root
      MYSQL_PASSWORD: password
      MYSQL_DATABASE: myfuns
    command: mysqld --character-set-server=utf8 --collation-server=utf8_general_ci --init-connect='SET NAMES UTF8;'
  web:
    build: .
    container_name: myfuns_web
    ports:
    - "80:80"
    - "443:443"
    links:
    - db:database_host
    volumes:
    - ./:/var/www/html
    - ./ssl:/var/www/ssl
    environment:
      ENV: local
      SERVER_NAME: localhost
      SSL: "off"
    depends_on:
    - db
    restart: unless-stopped
volumes:
  db_data:
